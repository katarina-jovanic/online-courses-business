@model IEnumerable<Zavrsni.Models.Student>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<h1>Studenti</h1>

<p>
        <a class="tbutton" asp-action="Create">Kreiraj novog studenta</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Ime na kartici
            </th>
            <th>
                Broj računa
            </th>
            <th>
                Datum isteka
            </th>
            <th>
                CSV
            </th>
            <th>
                Uloga
            </th>
            <th>
                Email
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CardName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CardNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpirationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CSV)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Role)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StudentNavigation.Email)
            </td>
            <td>
                        <a class="tbutton" asp-action="Edit" asp-route-id="@item.StudentID">Izmeni</a>|<a class="tbutton" asp-action="Details" asp-route-id="@item.StudentID">Detalji</a>|<a class="tbutton" asp-action="Delete" asp-route-id="@item.StudentID">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>