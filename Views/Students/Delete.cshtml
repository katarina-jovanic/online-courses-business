@model Zavrsni.Models.Student

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<h1>Obriši studenta</h1>

<h3>Da li želiš da obrišeš ovog studenta?</h3>
<div>
    <h4>Student</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Ime na kartici
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CardName)
        </dd>
        <dt class = "col-sm-2">
            Broj računa
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CardNumber)
        </dd>
        <dt class = "col-sm-2">
            Datum isteka
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExpirationDate)
        </dd>
        <dt class = "col-sm-2">
            CSV
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CSV)
        </dd>
        <dt class = "col-sm-2">
            Uloga
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentNavigation.Email)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StudentID" />
            <input type="submit" value="Obriši" class="tbutton" /> |
            <a class="tbutton" asp-action="Index">Nazad na listu</a>
    </form>
</div>
</div>