@model Zavrsni.Models.Teacher


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
<h1>Detalji o predavaču:</h1>


<div>
    <h4>Predavač</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Opis predavača
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Introduction)
        </dd>
        <dt class = "col-sm-2">
            Uloga
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Role)
        </dd>
        <dt class = "col-sm-2">
            Broj kreiranih kurseva
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NumCoursesCreated)
        </dd>
        <dt class = "col-sm-2">
            Email
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TeacherNavigation.Email)
        </dd>
    </dl>
</div>
<div>
        <a class="tbutton" asp-action="Edit" asp-route-id="@Model?.TeacherID">Izmeni</a> |
        <a class="tbutton" asp-action="Index">Nazad na listu</a>
</div>




</div>